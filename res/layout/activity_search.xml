<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="me.veereshbeeram.veereshmukotestapp.SearchActivity"
    android:layout_gravity="center" 
    android:gravity="center_horizontal">

	<EditText 
	    android:id="@+id/search_input"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:hint="@string/edit_text_hint"
	    android:layout_marginBottom="@dimen/activity_vertical_margin"
	    android:layout_marginTop="@dimen/activity_vertical_margin"
	    />
	<ImageButton
	    android:layout_marginBottom="@dimen/activity_vertical_margin"
	    android:layout_marginTop="@dimen/activity_vertical_margin"
	    android:id="@+id/mic_image_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:contentDescription="@string/mic_content_des"
	    android:src="@drawable/ic_action_microphone"
	    android:background="@drawable/mic_background" />
	
	<Button 
	    android:layout_marginTop="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:id="@+id/search_button"
	    android:text="@string/search_button_string"
	    android:gravity="center_vertical"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:background="@drawable/rounded_box_states"
	   />
</LinearLayout>
