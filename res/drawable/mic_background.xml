<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="oval"
            android:innerRadiusRatio="1">
            <gradient
                android:startColor="@color/blue_dark"
                android:endColor="@color/blue_mid"
                android:angle="270" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/orange1"
                android:startColor="@color/orange2"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/stroke_grey" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape android:shape="oval"
            android:innerRadiusRatio="1.0">
            <gradient
                android:endColor="@color/blue_mid"
                android:startColor="@color/blue_light"
                android:angle="270" />
        </shape>
    </item>
</selector>